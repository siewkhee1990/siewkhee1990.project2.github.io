<body style="width:50%;margin:auto">
    <form class="text-center border border-light p-5" action="/" method="POST">
        <h2>Welcome to Leave System</h2>
        <p class="h4 mb-4">Please sign in</p>
        <!-- Username -->
        <input type="text" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="Username" name="username" required>
        <!-- Password -->
        <input type="password" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Password"
            name="password" required>
            <button class="btn btn-primary btn-block" type="submit">Sign in</button>
        <div class="d-flex justify-content-around">
            <a href="/resetPassword">Forgot password?</a>
            <a href="/register">Register?</a>
        </div>
    </form>
    <!-- Default form login -->
</body>

</html>